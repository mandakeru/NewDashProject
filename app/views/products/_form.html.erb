
<div class="box box-info col-sm-8">
  <div class="box-header with-border">
    <h3 class="box-title">Novo Cliente</h3>
  </div>
  <form class="form-horizontal">
    <div class="box-body">
      <%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  
    <div class="form-group">
     <label for="inputCustomerCode" class="col-sm-2 control-label">Nome </label>
     <div class="col-sm-10">
        <%= f.input :name, label: false, class: 'form-control' %>
     </div>
  </div>
  <div class="form-group">
     <label for="inputCustomerCode" class="col-sm-2 control-label">Descrição </label>
     <div class="col-sm-10">
        <%= f.input :description, label: false, class: 'form-control' %>
     </div>
  </div>
  <div class="form-group">
     <label for="inputCustomerCode" class="col-sm-2 control-label">Preço </label>
     <div class="col-sm-10">
        <%= f.input :price, label: false, class: 'form-control' %>
     </div>
  </div>
  <div class="form-group">
     <label for="inputCustomerCode" class="col-sm-2 control-label">Quantidade </label>
     <div class="col-sm-10">
        <%= f.input :quantity, label: false, class: 'form-control' %>
     </div>
  </div>
    
    
  

  <div class="box-footer">
    <div class="form-actions">
      <button class="btn btn-default"><%= link_to :back, 'Voltar' %></button> 
    <%= f.button :submit, class: 'btn btn-info pull-right' %>
  </div>
  </div>
  
  
<% end %>
    </div>

</form>
</div>